<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DessertRecipeFragment">

    <TextView
        android:id="@+id/pastries_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastries Recipes"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/pastries_browse_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_recipes"
        android:layout_below="@+id/pastries_intro"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/css_gray"
        android:textStyle="italic"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_pastries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pastries_browse_recipes"/>

</RelativeLayout>